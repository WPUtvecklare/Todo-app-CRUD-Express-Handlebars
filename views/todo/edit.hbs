<h1>
  <span class="far fa-edit"></span> Edit
</h1>

<form method="post" action="/todo/edit">
  <input type="hidden" name="id" value="{{locals.id}}" />
  <div class="form-group">
      <textarea class="form-control white-space" name="description" placeholder="Update to-do description here" required="true" autofocus="autofocus">{{locals.description}}</textarea>
  </div>
    <div class="form-group">
    <input type="checkbox" class="form-control" name="done" {{#if locals.done }} checked="checked" {{/if}} readonly="readonly" />
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Update</button>
</form>