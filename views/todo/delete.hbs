<h1>
  <span class="far fa-trash-alt"></span> Delete
</h1>

<form method="post" action="/todo/delete">
  <input type="hidden" name="id" value="{{locals.id}}" />
  <div class="form-group">
    <textarea class="form-control white-space" name="description" placeholder="Your description here" readonly="readonly">{{locals.description}}</textarea>
  </div>
  <button type="submit" class="btn btn-lg btn-primary" autofocus="autofocus">Delete</button>
</form>